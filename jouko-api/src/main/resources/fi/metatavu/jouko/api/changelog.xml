<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
  <changeSet author="Ilmo Euro" id="20180227-contents-initial-database">
    <createTable tableName="User">
      <column autoIncrement="true" name="id" type="INTEGER">
        <constraints primaryKey="true"/>
      </column>
      <column name="keycloakId" type="UUID">
        <constraints nullable="false"/>
      </column>
      <column name="name" type="VARCHAR(4095)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createTable tableName="Device">
      <column autoIncrement="true" name="id" type="INTEGER">
          <constraints primaryKey="true"/>
      </column>
      <column name="name" type="VARCHAR(4095)">
        <constraints nullable="false"/>
      </column>
      <column name="user_id" type="INTEGER">
          <constraints nullable="false"/>
      </column>
    </createTable>

    <addForeignKeyConstraint
        baseTableName="Device"
        baseColumnNames="user_id"
        referencedTableName="User"
        referencedColumnNames="id"
        constraintName="fk_Device_user_id"
        deferrable="false"
        initiallyDeferred="false"
        onDelete="NO ACTION"
        onUpdate="NO ACTION" />

    <createTable tableName="Interruption">
      <column autoIncrement="true" name="id" type="INTEGER">
          <constraints primaryKey="true"/>
      </column>
      <column name="startTime" type="TIMESTAMP WITH TIME ZONE">
          <constraints nullable="false"/>
      </column>
      <column name="endTime" type="TIMESTAMP WITH TIME ZONE">
          <constraints nullable="false"/>
      </column>
      <column name="cancelled" type="BOOLEAN">
          <constraints nullable="false"/>
      </column>
      <column name="cancellationTime" type="TIMESTAMP WITH TIME ZONE">
          <constraints nullable="false"/>
      </column>
      <column name="device_id" type="INTEGER">
          <constraints nullable="false"/>
      </column>
    </createTable>

    <addForeignKeyConstraint
        baseTableName="Interruption"
        baseColumnNames="device_id"
        referencedTableName="Device"
        referencedColumnNames="id"
        constraintName="fk_Interruption_device_id"
        deferrable="false"
        initiallyDeferred="false"
        onDelete="NO ACTION"
        onUpdate="NO ACTION" />

    <createTable tableName="DevicePowerMeasurement">
      <column autoIncrement="true" name="id" type="INTEGER">
          <constraints primaryKey="true"/>
      </column>
      <column name="startTime" type="TIMESTAMP WITH TIME ZONE">
          <constraints nullable="false"/>
      </column>
      <column name="endTime" type="TIMESTAMP WITH TIME ZONE">
          <constraints nullable="false"/>
      </column>
      <column name="measurementType" type="VARCHAR(255)">
          <constraints nullable="false"/>
      </column>
      <column name="measurementValue" type="DOUBLE">
          <constraints nullable="false"/>
      </column>
      <column name="device_id" type="INTEGER">
          <constraints nullable="false"/>
      </column>
    </createTable>

    <addForeignKeyConstraint
        baseTableName="DevicePowerMeasurement"
        baseColumnNames="device_id"
        referencedTableName="Device"
        referencedColumnNames="id"
        constraintName="fk_DevicePowerMeasurement_device_id"
        deferrable="false"
        initiallyDeferred="false"
        onDelete="NO ACTION"
        onUpdate="NO ACTION" />
  </changeSet>

</databaseChangeLog>